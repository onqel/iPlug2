[project]
  ignore = \
    .git \
    .buckd \
    Documentation

  allow_symlinks = forbid

[repositories]

platformdeps = ./Dependencies/buckbuild/

[build]
  engine = deep

[parser]
  default_build_file_syntax = SKYLARK

[cxx]
  should_remap_host_platform = true

[cxx#linux-x86_64]
  should_remap_host_platform = true
  linker_platform = GNU

[cxx#macosx-x86_64]
  combined_preprocess_and_compile = true